<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Preload_Data.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Preload_Data.Views"
    Title="Preload Data"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <Tab Title="Tab 1" Icon="dotnet_bot.svg">
            <ShellContent ContentTemplate="{DataTemplate views:MainPage}" />
        </Tab>
        <Tab Title="Tab 2" Icon="dotnet_bot.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ExchangesPage}" />
        </Tab>
    </TabBar>

</Shell>
